@model IEnumerable<MyTube.DTO.VideoDTO>
<h4>Recommended</h4>
<div class="row">
    @foreach (var video in Model)
    {
        <div class="col-md-2 col-sm-4 col-xs-6" id="test">
            <a href="@Url.Action("VideoPage/"+video.VideoID,"Videos")" target="_self">

                <img id="imgFormat" src="@video.ThumbnailUrl" alt="video" style="width:100%">
                <div class="caption">
                    <p id="titleBar">@video.VideoName</p>
                </div>
            </a>
            <p id="stats"><a>@video.VideoOwner</a><br>@video.ViewsCount<br>@video.DatePostedString</p>
        </div>
    }
</div>
