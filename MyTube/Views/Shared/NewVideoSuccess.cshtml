@{
    ViewBag.Title = "Video Created";
}
<link rel="stylesheet" type="text/css" href="~/Content/registration.css">
<script src="~/Scripts/newVideo.js" type="text/javascript"></script>
<div class="col-md-8" id="regSuccDiv">
    <h1>Video "@ViewBag.VideoName" has been created.</h1>
    <h3>Would you like to set picture for it?</h3>
    <form action="@Url.Action("ChangePictureUpload","Videos")" method="post" enctype="multipart/form-data" id="uploadPicForm">
        <div class="thumbnail col-md-offset-3 col-md-6">
            <div class="col-md-12" style="padding:10px 0px 5px 15px">
                <input type="checkbox" id="linkOrLocalPicture" onclick="toggleUrlUpload()" data-val="true" />
                <label for="linkOrLocalPicture"> Upload file instead of link?</label>
            </div>
            <div id="link" class="modal-header" style="padding:0 0 10px 0">
                <div class="col-md-12">
                    <input type="text" name="ThumbnailUrl" id="ThumbnailUrl" class="form-control" />
                </div>
            </div>
            <div id="upload" class="modal-header col-md-offset-3 col-md-6" style="padding:0 0 10px 0">
                <input type="hidden" name="videoId" id="videoId" value="@ViewBag.VideoId" />
                <input type="file" name="image" id="image" />
            </div>
            <div class="col-md-12" style="padding:10px 0 10px 0">
                <input class="btn btn-danger" type="button" value="Submit" onclick="submitPicture()" />
                <a class="btn btn-default" href="@Url.Action("VideoPage/"+ViewBag.VideoID,"Home")">Skip</a>
            </div>

        </div>
    </form>
</div>